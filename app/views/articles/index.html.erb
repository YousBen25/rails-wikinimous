<div class="article-container">
  <div class="row justify-content-center">
    <div class="col-sm-8 col-sm-offset-2 mx-auto justify-content-center">
      <% @articles.each do |article| %>
        <article>
          <%= link_to article_path(article) do %>
            <h2><%=article.title%></h2>
          <% end %>
          <%=article.content%><
        </article>
      <% end %>
    </div>
  </div>
</div>
